      "spec/javascripts/vendor/*.js"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-var": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  },
  "dependencies": {
    "axe-core": "^3.5.4",
    "govuk-frontend": "^3.14.0",
    "jquery": "1.12.4",
    "sortablejs": "^1.13.0"
  },
  "devDependencies": {
    "standardx": "^7.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-gds": "^0.1.0",
    "@percy/agent": "^0.28.6"
  }
}
