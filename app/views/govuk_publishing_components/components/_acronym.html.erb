<% acronym ||= false %>
<% explanation ||= false %>

<% if acronym %>
    <div class="gem-c-acronym">
        <span class="gem-c-acronym__acronym">
            <%= acronym %>
        </span>
        <% if explanation %>
            <span class="gem-c-acronym__explanation">
                <%= explanation %>
            </span>
        <% end %>
    </div>
<% end %>
