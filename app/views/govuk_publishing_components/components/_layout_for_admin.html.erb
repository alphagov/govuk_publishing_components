<% product_name ||= "Publishing" %>
<% body = yield %>

<!DOCTYPE html>
<html lang="en" class="govuk-template">
  <head>
    <meta charset="utf-8" />
    <title><%= browser_title %> â€” GOV.UK <%= product_name %></title>
    <meta name="robots" content="noindex,nofollow,noimageindex">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= favicon_link_tag "govuk_publishing_components/favicon-#{environment}.png" %>
    <%= javascript_include_tag "govuk_publishing_components/vendor/modernizr" %>
    <%= yield :head %>
  </head>
  <body class="govuk-template__body">
    <script>
      document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');
    </script>
    <%= body %>
    <%= javascript_include_tag "govuk_publishing_components/no_slimmer" %>
  </body>
</html>
