  css_classes = %w( gem-c-hint govuk-hint )
  css_classes << shared_helper.get_margin_bottom

  dir = right_to_left ? "rtl" : nil
%>

<%= tag.div id: id, class: css_classes, dir: dir do %>
  <%= text %>
<% end %>
