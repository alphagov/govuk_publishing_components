<%
  items ||= []
  empty ||= ""
  add_button_text ||= "Add another"
%>

<div data-module="add-another" class="gem-c-add-another">
  <% items.each do |item| %>
    <div class="gem-c-add-another__repeated-fields js-add-another__repeated-fields">
      <%= item %>
    </div>
  <% end %>
  <%= empty %>
  <%= render 'govuk_publishing_components/components/add_another/add_button', add_button_text: add_button_text %>
</div>