<% text = text || yield %>
<% legend_text = legend_text || nil %>
<% if text.present? || legend_text.present? %>
  <fieldset class="gem-c-fieldset">
    <% if legend_text %>
      <legend class="gem-c-fieldset__legend">
        <%= legend_text %>
      </legend>
    <% end %>
    <%= text %>
  </fieldset>
<% end %>
