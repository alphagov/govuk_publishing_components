<%= render "govuk_publishing_components/components/error_summary", {
  title: "Message to alert the user to a problem goes here",
  description: "Optional description of the errors and how to correct them",
  items: [
    {
      text: "Link to first input",
      href: "#example-error-1",
    },
    {
      text: "Link to second input",
      href: "#example-error-2",
    },
  ],
} %>

<%= render "govuk_publishing_components/components/heading", {
  text: "My page title",
  heading_level: 1,
} %>

<%= render "govuk_publishing_components/components/input", {
  id: "example-error-1",
  label: {
    text: "What is your name?",
  },
  name: "name",
  error_message: "First input error",
} %>

<% input = render "govuk_publishing_components/components/input", {
  id: "example-error-2",
  label: {
    text: "What is your name?",
  },
  name: "name",
  error_message: "Second input error",
} %>

<%= render "govuk_publishing_components/components/tabs", {
  tabs: [
    {
      id: "tab1",
      label: "First section",
      content: input,
    },
    {
      id: "tab2",
      label: "Second section",
      content: "Content for second section",
    },
  ],
} %>
